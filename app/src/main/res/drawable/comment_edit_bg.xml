<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E4E6EB"/>

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0"/>

    <!-- Padding inside EditText -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
