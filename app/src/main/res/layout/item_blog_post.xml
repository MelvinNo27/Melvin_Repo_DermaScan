<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    android:backgroundTint="@color/white"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Community/Subreddit Header -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/option"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile2" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="r/ChikaPH"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1A1A1B" />

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="#878A8C"
                android:backgroundTint="#878A8C" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12h ago"
                android:textSize="12sp"
                android:textColor="#878A8C" />
        </LinearLayout>

        <ImageView
            android:id="@+id/option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_option"
            android:padding="4dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Post Title/Content -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Grabe ang diet! Claudine Barretto, now at 87-kg, attends Christmas Party of her brother's friends"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A1A1B"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerSection" />

        <!-- Media Preview (Optional) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mediaCard"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#EDEFF1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

            <ImageView
                android:id="@+id/mediaPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:background="#F6F7F8" />


            <!-- Video duration badge -->
            <TextView
                android:id="@+id/videoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="#CC000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0:20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons Bar -->
        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediaCard">

            <!-- Upvote/Downvote Section -->
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/vote_background"
                android:paddingStart="8dp"
                android:focusable="true"
                android:paddingEnd="8dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_heart_outline"
                    app:tint="#878A8C"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="2dp" />


                <TextView
                    android:id="@+id/heartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="212"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1B"
                    android:minWidth="28dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Comments Section -->
            <LinearLayout
                android:id="@+id/commentContainer"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:focusable="true"
                android:paddingEnd="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:id="@+id/commentButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_comment"
                    app:tint="#878A8C" />

                <TextView
                    android:id="@+id/commentSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="84"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#878A8C" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>