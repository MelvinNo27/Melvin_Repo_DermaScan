<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section: Avatar, Username, Time, Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- User Avatar with Online Indicator -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/imageUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile2" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- Username and Time Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Username with Verified Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Author Badge (Optional) -->
                    <TextView
                        android:id="@+id/authorBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTHOR"
                        android:textSize="10sp"
                        android:textColor="#4A90E2"
                        android:background="@drawable/message_background"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginStart="6dp"
                        android:visibility="gone"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Time Posted -->
                <TextView
                    android:id="@+id/textCommentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Comment Content -->
        <TextView
            android:id="@+id/textCommentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment here"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp" />

        <!-- Image Attachment (Optional) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageAttachmentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="60dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageAttachment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Attached image" />
        </androidx.cardview.widget.CardView>

        <!-- Read More/Less Link (for long comments) -->
        <TextView
            android:id="@+id/readMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read more"
            android:textColor="#4A90E2"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginStart="60dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            android:visibility="gone" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical">

            <!-- Like Button -->
            <LinearLayout
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:paddingStart="0dp">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_heart_outline"
                    app:tint="#373737" />

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginStart="6dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Reply Button -->
            <LinearLayout
                android:id="@+id/replyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_comment"
                    app:tint="#373636" />

                <TextView
                    android:id="@+id/replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Replies Section (Nested Comments) -->
        <LinearLayout
            android:id="@+id/repliesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="60dp"
            android:visibility="gone">

            <!-- View Replies Button -->
            <LinearLayout
                android:id="@+id/viewRepliesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:paddingStart="0dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="2dp"
                    android:background="#DDDDDD" />

                <TextView
                    android:id="@+id/viewRepliesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View 3 replies"
                    android:textSize="13sp"
                    android:textColor="#4A90E2"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

                <ImageView
                    android:id="@+id/repliesArrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/left_arrow"
                    android:layout_marginStart="4dp"
                    app:tint="#4A90E2" />
            </LinearLayout>

            <!-- Replies RecyclerView (will be populated dynamically) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/repliesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Edited Indicator -->
        <TextView
            android:id="@+id/editedIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(edited)"
            android:textSize="11sp"
            android:textColor="#999999"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginStart="60dp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>