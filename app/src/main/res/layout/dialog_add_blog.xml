<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/textWritePostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Post"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="20dp" />

    <!-- Content Input -->
    <EditText
        android:id="@+id/etBlogContent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="top|start"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:hint="What's on your mind?"
        android:textColorHint="#999999"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="6"
        android:scrollbars="vertical" />

    <!-- Media Preview Card (Image/Video) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mediaPreviewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/ivBlogImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:visibility="gone" />

            <!-- Video Preview -->
            <VideoView
                android:id="@+id/vvBlogVideo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F5F5F5"
                android:visibility="gone" />

            <!-- Video Play Overlay -->
            <ImageView
                android:id="@+id/videoPlayOverlay"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_circle"
                android:visibility="gone"
                app:tint="@color/white"
                android:alpha="0.9" />

            <!-- Media Type Badge -->
            <TextView
                android:id="@+id/mediaTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:background="#CC000000"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Video"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />

            <!-- Remove Media Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnRemoveMedia"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_close"
                    android:padding="6dp"
                    app:tint="@color/black" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <!-- Add Image Button -->
        <LinearLayout
            android:id="@+id/btnAddImage"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/image_placeholder_border"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_image_search_24"
                app:tint="#FF6B6B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Add Photo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Post Button -->
    <Button
        android:id="@+id/btnPostBlog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Post"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/main_green"
        android:layout_marginTop="20dp"
        app:cornerRadius="25dp"
        android:elevation="2dp" />

</LinearLayout>