<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlogView">

    <!-- Top App Bar with Gradient Background -->
    <View
        android:id="@+id/topBarBackground"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/banner9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button with Circular Background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/backButtonCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:backgroundTint="#80FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBTN"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center"
            android:clickable="true"
            app:tint="@color/black" />
    </androidx.cardview.widget.CardView>
    <!-- Title Card with Shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Blog Category Tag -->
            <TextView
                android:id="@+id/categoryTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_background"
                android:letterSpacing="0.1"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:text="TECHNOLOGY"
                android:textColor="#FF6B6B"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Here"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp" />

            <!-- Metadata Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Author Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/authorAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_profile" />
                </androidx.cardview.widget.CardView>

                <!-- Author Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author Name"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Reading Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/message_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_clock"
                        app:tint="#666666" />

                    <TextView
                        android:id="@+id/readingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="5 min"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Stats Row (Likes, Comments, Views) -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Responses Section Header -->
    <LinearLayout
        android:id="@+id/responsesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Responses"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <!-- Responses RecyclerView with Enhanced Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/responsesCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/commentInputCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/responsesHeader">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewResponse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="12dp"
            android:clipToPadding="false" />
    </androidx.cardview.widget.CardView>

    <!-- Enhanced Comment Input -->
    <androidx.cardview.widget.CardView
        android:id="@+id/commentInputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/commentInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <!-- User Avatar in Comment Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                android:layout_marginStart="4dp">

                <ImageView
                    android:id="@+id/userAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <!-- Enhanced EditText -->
            <EditText
                android:id="@+id/commentEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/message_background"
                android:hint="Share your thoughts..."
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:maxLines="4"
                android:inputType="textMultiLine|textCapSentences" />

            <!-- Send Button with Animation -->
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:backgroundTint="#4A90E2"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:id="@+id/sendBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Send comment"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_send"
                    android:clickable="true"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>